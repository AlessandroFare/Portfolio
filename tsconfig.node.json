{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules"]
} 